pipeline {
  agent any 
  stages {
     stage('Initialize'){
        def dockerHome = tool 'myDocker'
        env.PATH = "${dockerHome}/bin:${env.PATH}"
    }
    stage('Verify version') {
      steps {
        sh 'docker run -u jenkins --rm -v var/jenkins_home/workspace:var/jenkins_home/workspace flyway/flyway:8.5.1 version'
      }
    }
  }
}