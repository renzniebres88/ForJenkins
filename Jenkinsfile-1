pipeline {
    agent {    
            label 'jenkins'  
      }
      triggers{
        pollSCM '*/5 * * * *'
      }
    stages {
            stage('Verify version') {
      steps {
        sh 'docker run --rm -v /var/run/docker.sock:/var/run/docker.sock -v $(which docker):/usr/bin/docker -v $HOME/.jenkins/:/var/jenkins_home  -v /path/on/host:/path/in/container  flyway/flyway'
      }
    }
    }
}